{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2016", "es2019"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "plugins": [
    {
      "name": "@styled/typescript-styled-plugin"
    }
  ]
}