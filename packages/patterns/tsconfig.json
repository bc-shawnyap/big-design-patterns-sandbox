{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "es2021"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}