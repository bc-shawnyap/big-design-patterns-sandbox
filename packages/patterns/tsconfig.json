{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "ESNext",
      "lib": ["dom", "ES2015"],
      "target": "ES5",
      "declaration": true,
      "declarationDir": "./dist",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src"]
  }
  